<div class="container">
  <h1>Restaurants</h1>
  <div class="d-flex flex-wrap gap-4">
    <% @restaurants.each do |restaurant| %>
      <div class="card shadow" style="width: 18rem;">
      <%= image_tag "https://loremflickr.com/320/240/#{restaurant.name.split(' ')[1]}" %>
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong><%= restaurant.category.capitalize %> Food</strong></li>
          <li class="list-group-item"><%= restaurant.address %></li>
          <li class="list-group-item"><%= restaurant.phone_number %></li>
        </ul>
        <%= link_to 'Check Me', restaurant_path(restaurant), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
